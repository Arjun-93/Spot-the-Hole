{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "google"],
	"rules": {
		"quotes": ["error", "double"],
		"no-tabs": 0,
        "indent": [2, "tab"],
        "one-var": ["error", "consecutive"],
        "comma-dangle": ["error", "never"]
	},
	"parserOptions": {
		"ecmaVersion": 2019
	}
}
